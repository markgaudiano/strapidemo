{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "sites",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "shortdescription": {
      "maxLength": 140,
      "type": "string"
    },
    "content": {
      "default": "",
      "type": "text"
    },
    "categories": {
      "collection": "categories",
      "via": "posts"
    },
    "user": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    }
  }
}